<!-- app/views/games/new.html.erb -->

<div class="container">
  <h1>Longest Word Game</h1>

  <p>Use the letters below to form a valid English word:</p>

  <ul class="letter-grid">
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>

  <%= form_tag score_path, method: :post, data: { turbo: false } do %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join(" ") %>

    <label for="word">Your word:</label>
    <input type="text" name="word" id="word">

    <input type="submit" value="Play!">
  <% end %>
</div>
